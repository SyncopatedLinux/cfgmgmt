export NOTEBOOK="$HOME/Notebook"
export STUDIO="$HOME/Studio"
export WORKSPACE="$HOME/Workspace"

export SOUNDS="$STUDIO/Library/sounds"
export SOUNDFONTS="$STUDIO/Library/soundfonts"

{% if inventory_hostname in groups.get('workstation', []) %}
export SYNCOPATED="$WORKSPACE/syncopated"

export ANSIBLE_HOME="$SYNCOPATED/cfgmgmt"
export ANSIBLE_CONFIG="$ANSIBLE_HOME/ansible.cfg"
export INVENTORY="$ANSIBLE_HOME/inventory.yml"
export PLAYBOOKS="$ANSIBLE_HOME"

export PKGBUILDS="$SYNCOPATED/pkgrr/pkgbuilds"
export PACKAGES="$HOME/Packages"

export CHROOT="/mnt/chroots/arch"
export DEVTOOLS="$SYNCOPATED/pkgrr/devtools"
export pacman_conf="$DEVTOOLS/pacman-x86_64.conf"
export makepkg_conf="$DEVTOOLS/makepkg-x86_64.conf"

export REPOSITORY_LOCAL="$HOME/Repository"
export REPOSITORY_MIRRORS=("ec2-user@syncopated.hopto.org" "bender.syncopated.net")

export PATH="$PATH:${DEVTOOLS}"
{% endif %}
